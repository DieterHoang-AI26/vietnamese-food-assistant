# Vietnamese Food Assistant Configuration
# Copy this file to .env and adjust values as needed

# Model Selection (vistral or qwen)
VFA_MODEL=vistral

# Model Endpoints (Ollama default)
VFA_VISTRAL_URL=http://localhost:11434
VFA_QWEN_URL=http://localhost:11434

# Model IDs
VFA_VISTRAL_MODEL=vistral:latest
VFA_QWEN_MODEL=qwen2.5:latest

# Database Settings
VFA_CHROMA_DIR=data/chroma_db

# Data Directory
VFA_DATA_DIR=data

# Processing Settings
VFA_CONFIDENCE_THRESHOLD=0.7
VFA_MAX_RETRIEVED_DOCS=10

# Session Settings
VFA_SESSION_TIMEOUT=30